VAGRANT
---------

// Start vagrant
cd mue\project\calendar
vagrant up
vagrant ssh

// DEVELOPMENT
export NODE_ENV=development
export NODE_PATH=/vagrant/server

cd /vagrant/server/applications/oauth-server/services/api
pm2 start index.js --name oauth-server

cd /vagrant/server/server/applications/account/server/services/api
pm2 start index.js --name account-api

cd /vagrant/server/applications/test/services/api
pm2 start index.js --name test

cd /vagrant/server/applications/proxy/services/web
pm2 start index.js --name proxy

cd /vagrant/server/applications/account/server/services/web
pm2 start index.js --name account

cd /vagrant/server/applications/oauth-access/services/web
pm2 start index.js --name oauth-access

// PRODUCTION
export NODE_ENV=production
export NODE_PATH=/vagrant/server


